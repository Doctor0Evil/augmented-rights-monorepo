contract ZkVerifier {
    address public immutable admin;
    bytes32 public merkleRoot; // Root over active charter commitments.

    event RootUpdated(bytes32 indexed newRoot);

    modifier onlyAdmin() {
        require(msg.sender == admin, "ZKV: not admin");
        _;
    }

    constructor(address admin_, bytes32 initialRoot) {
        require(admin_ != address(0), "ZKV: zero admin");
        admin = admin_;
        merkleRoot = initialRoot;
    }

    function updateRoot(bytes32 newRoot) external onlyAdmin {
        merkleRoot = newRoot;
        emit RootUpdated(newRoot);
    }

